<?xml version="1.0" encoding="UTF-8" ?>
<dbat encoding="UTF-8"
    conn="worddb"
    lang="en"
    xmlns   ="http://www.teherba.org/2007/dbat"
    xmlns:ht="http://www.w3.org/1999/xhtml"
    title="Specifications"
    >
<!--
    @(#) $Id$
    2016-02-09: order by subdir, name
	2013-01-05: aligned with spec/test/index.xml
    2012-06-22: lang=en
    2011-02-01: Dr. Georg Fischer
-->    
    <comment lang="en">in all areas</comment>
    <comment lang="de">in allen Teilbereichen</comment>
    
    <ht:h2>All <ht:a href="index.html">Dbat</ht:a> Specifications</ht:h2>
    
    <select group="subdir">
        <col name="subdir" label="Area" style="visible">subdir</col>
        <col label="Specification" href="servlet?&amp;spec=">concat(concat(subdir, '.'), name)</col>
        <col label="Description">concat(concat(concat('<ht:strong>', title), '</ht:strong> &amp;mdash; '), comment)</col>
        <col label="Parameters with defaults">params</col>
        <from>spec_index
        </from>
        <order by="subdir,name" />
        <counter desc="Specification,s" />
    </select>

</dbat>
