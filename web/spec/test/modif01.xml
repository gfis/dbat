<dbat	xmlns   ="http://www.teherba.org/2007/dbat"
		xmlns:ht="http://www.w3.org/1999/xhtml"
		encoding="UTF-8"
		lang="en" 
		conn="worddb" 
		title="modif01"
		>
	<comment lang="en">Show one row to be modified</comment>
	<comment lang="de">Ausgabe einer zu &#xe4;ndernden Zeile</comment>

    <ht:h3>Modify one row</ht:h3>
    <ht:form method="get">
        <ht:input label="Name" name="name" maxsize="20" size="10" init="Martha" />
        <ht:input type="submit" value="Submit" />
    </ht:form>
    
    <select limit="vertical">    	
        <col label="Name"    	pseudo="input">name</col>
        <col label="University" pseudo="textarea">univ</col>
        <col label="Year"  		pseudo="input">year</col>
        <col label="Gender"    	pseudo="input">gender</col>
        <col label="Birthdate" 	pseudo="input">birth</col>
        <from>c01</from>
        <where>name = '<parm name="name" />'
        </where>
    </select>

</dbat>
