<dbat	xmlns   ="http://www.teherba.org/2007/dbat"
		xmlns:ht="http://www.w3.org/1999/xhtml"
		encoding="UTF-8"
		lang="en" 
		conn="worddb" 
		title="selec03"
		>
	<comment lang="en">Select from test table</comment>
	<comment lang="de">Abfrage der Test-Tabelle</comment>
	
    <ht:h3>Select from test table c01</ht:h3>
    <ht:form method="get">
        <ht:input label="Name" name="name" maxsize="20" size="10" init="%r" />
        <ht:input type="submit" value="Submit" />
    </ht:form>
    <select limit="2048">
        <col label="Name"    	>name</col>
        <col label="University" >univ</col>
        <col label="Year"  align="right">year</col>
        <col label="Gender"    	>gender</col>
        <col label="Birthdate" 	>birth</col>
        <from>c01</from>
        <where>name like '<parm name="name" />%'
        </where>
        <counter desc="Person,s"/>
    </select>

    <ht:h3>Select from test table <ht:em>c01</ht:em> - with linked values</ht:h3>
    <select>
        <col label="Year"  align="right" 
 			   href="servlet?spec=test/selec01&amp;name*&amp;year*">concat(name, concat('*', cast(year as char)))</col>
        <col label="Name"   link="test/selec01&amp;year=&amp;name=">concat(cast(year as char), concat('=', name))</col>
        <col label="Year"  	link="spec1&amp;prefix=&amp;prefix2=" align="right">concat(cast(year as char), concat('=e.', cast(year as char)))</col>
        <col label="Name"   
        	   href="servlet?spec=spec1&amp;prefix=&amp;prefix2="              >concat(name, concat('=f.', name))</col>
        <col label="University" >univ</col>
        <col label="Gender"    	>gender</col>
        <col label="Birthdate" 	>birth</col>
        <from>c01</from>
        <where>name like '<parm name="name" />%'
        </where>
        <counter desc="Person,s"/>
    </select>
</dbat>
