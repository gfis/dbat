<dbat encoding="UTF-8"
	xmlns   ="http://www.teherba.org/2007/dbat"
	xmlns:ht="http://www.w3.org/1999/xhtml"
	>
<!--
    Dbat specification - test Retrieve, Update and Delete
    @(#) $Id$
    Copyright (c) 2007 Dr. Georg Fischer <ht:punctum@punctum.com>
    2007-01-06: copied from spec/search.xml
-->
    <ht:h2 test="dummy">DBAT Test - Retrieve, Update and Delete Verbs</ht:h2>
    <ht:form>
        <ht:input label="Prefix" name="prefix" maxsize="20" size="10" />
        <ht:input type="submit" value="Submit" />
    </ht:form>

    <select>
        <col pseudo="image" key="entry,enrel" label="Upd." link="test.update1" />
        <col pseudo="image" key="entry,enrel" label="Del." link="test.delete1" />
        <col label="Entry"   link="test/spec2&amp;prefix=">entry</col>
        <col label="Related" href="servlet?spec=spec3&amp;prefix=">enrel</col>
        <from>words</from>
        <where>entry like '<parm name="prefix"/>%'</where>
        <counter />
    </select>
</dbat>
