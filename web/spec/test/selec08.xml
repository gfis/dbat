<dbat   xmlns   ="http://www.teherba.org/2007/dbat"
        xmlns:ht="http://www.w3.org/1999/xhtml"
        encoding="UTF-8"
        lang="en" 
        conn="worddb" 
        title="selec08"
        >
    <!-- copy of selec05 -->
    <comment lang="en">Select from test table - with pseudo="sort" attribute</comment>
    <comment lang="de">Abfrage der Test-Tabelle mit Attribut pseudo="sort"</comment>

    <ht:h3>Select from test table <ht:em>c01</ht:em> - with pseudo="sort" attribute</ht:h3>
    
    <select>
        <col label="Name"              >name  </col>
        <col pseudo="sort"             >year  </col>
        <col label="University"        >univ  </col>
        <col label="Gender"            >gender</col>
        <col label="Birthdate"         >birth </col>
        <from>c01</from>
        <order by="year" />
        <counter desc="person,s"/>
    </select>
</dbat>
