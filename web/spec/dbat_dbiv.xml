    <comment lang="de">Generiert eine interaktive View auf eine Tabelle</comment>
    <comment lang="en">Generates an interactive view for a table</comment>

    <ht:h2>Interactive View for Table <ht:em><parm name="table" />%</ht:em></ht:h2>
    <ht:form method="get">
        <ht:input label="Name" name="table" maxsize="64" size="32" init="relatives" />% &#xa0;&#xa0;&#xa0;
        <ht:input type="submit" value="Generate" />
    </ht:form>
    <describe><parm name="table" />%</describe>
</dbat>
